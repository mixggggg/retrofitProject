<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcViewNumber"
            android:layout_width="match_parent"
            android:layout_height="257dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layoutManager="com.google.android.material.carousel.CarouselLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="281dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/sf_pro_display"
            android:text="Стандартный с видом на бассейн или сад"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="123dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="341dp"
            android:background="@drawable/layout_res2"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="103dp"
                android:layout_height="19dp"
                android:fontFamily="@font/sf_pro_display"
                android:text="Все включено"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="121dp"
            android:layout_height="29dp"
            android:layout_marginStart="147dp"
            android:layout_marginTop="341dp"
            android:background="@drawable/layout_res2"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="103dp"
                android:layout_height="19dp"
                android:fontFamily="@font/sf_pro_display"
                android:text="Кондиционер"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="16sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="192dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="376dp"
            android:background="@drawable/layout_res4"
            android:paddingStart="2dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="160dp"
                android:layout_height="19dp"
                android:fontFamily="@font/sf_pro_display"
                android:text="Подробнее о номере"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icons1" />

        </LinearLayout>

        <TextView
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="423dp"
            android:fontFamily="@font/sf_pro_display"
            android:text="186 600 ₽"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="176dp"
            android:layout_height="19dp"
            android:layout_marginStart="164dp"
            android:layout_marginTop="437dp"
            android:fontFamily="@font/sf_pro_display"
            android:text="за 7 ночей с перелётом"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="343dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="475dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_res"
            android:fontFamily="@font/sf_pro_display"
            android:text="Выбрать номер"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>