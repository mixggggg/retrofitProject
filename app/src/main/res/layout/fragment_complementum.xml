<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ComplementumFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/castomToolbar"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:paddingTop="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="52px"
            android:src="@drawable/icons5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:text="Заказ оплачен"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_display"
            android:layout_marginTop="52px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_marginTop="223dp"
        android:padding="25dp"
        android:src="@drawable/img"
        android:background="@drawable/backgraund_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="343dp"
        android:layout_height="26dp"
        android:layout_marginTop="349dp"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro_display"
        android:text="Ваш заказ принят в работу"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="329dp"
        android:layout_height="95dp"
        android:layout_marginTop="395dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/sf_pro_display"
        android:text="Подтверждение заказа №104893 может занять некоторое время (от 1 часа до суток). Как только мы получим ответ от туроператора, вам на почту придет уведомление."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="375dp"
        android:layout_height="88dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white">

        <Button
            android:id="@+id/button_go_hotel"
            android:layout_width="343dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:background="@drawable/button_res"
            android:fontFamily="@font/sf_pro_display"
            android:text="Супер!"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>